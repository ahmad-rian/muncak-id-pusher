APP_NAME=MuncakID
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

BCRYPT_ROUNDS=4

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Database Testing
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=muncak_id_test
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=array
SESSION_LIFETIME=120

# Broadcasting dengan Pusher untuk Testing
BROADCAST_CONNECTION=pusher
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=array
CACHE_PREFIX=

# Pusher Configuration untuk Testing
# Ganti dengan credentials Pusher testing Anda
PUSHER_APP_ID=your-test-app-id
PUSHER_APP_KEY=your-test-app-key
PUSHER_APP_SECRET=your-test-app-secret
PUSHER_APP_CLUSTER=ap1
PUSHER_SCHEME=https
PUSHER_HOST=
PUSHER_PORT=443

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Mail (disabled untuk testing)
MAIL_MAILER=array

# LiveKit Server Configuration untuk Testing
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# OAuth (optional untuk testing)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="${APP_URL}/auth/oauth/google/callback"

FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/oauth/facebook/callback"

# Dusk Configuration
DUSK_DRIVER_URL=http://localhost:9515
